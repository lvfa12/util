{
  "compilerOptions": {
    "target": "es5",      
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "module": "ES6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "typeRoots": ["node_modules/@types"],
    "outDir": "./dist",
    "rootDir": "../"
  },
  "include": [
    "./**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],

}